<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="PhotoBoardDao">
  <resultMap type="photoBoard" id="PhotoBoardMap">
    <id column="photo_id" property="no"/>
    <result column="lesson_id" property="lessonNo"/>
    <result column="titl" property="title"/>
    <result column="cdt" property="createdDate"/>
    <result column="vw_cnt" property="viewCount"/>
  </resultMap>
  <select id="findAll" resultMap="PhotoBoardMap">
    select
      photo_id,
      titl,
      cdt,
      vw_cnt,
      lesson_id
    from 
      lms_photo 
    order by 
      photo_id desc
  </select>

  <select id="findBy" parameterType="int" resultMap="PhotoBoardMap">
    select
      photo_id,
      titl,
      cdt,
      vw_cnt,
      lesson_id
    from 
      lms_photo 
    where 
      photo_id=#{value}
  </select>

  <insert id="insert" parameterType="PhotoBoard" 
    useGeneratedKeys="true" 
    keyColumn="photo_id" 
    keyProperty="no">
    insert into 
      lms_photo(lesson_id,titl)
    values(#{lessonNo}, #{title})
  </insert>

  <update id="update" parameterType="PhotoBoard">
    update
      lms_photo
    set
      titl=#{title}
    where
      photo_id=#{no}
  </update>

  <update id="increaseViewCount" parameterType="int">
    update lms_photo set
      vw_cnt = vw_cnt + 1
    where 
      photo_id=#{value}
  </update>
  
  <delete id="delete" parameterType="int">
    delete from lms_photo 
    where photo_id=#{no}
  </delete>
  </mapper>